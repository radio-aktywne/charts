{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "common": {
      "type": "object",
      "properties": {
        "metadata": {
          "type": "object"
        }
      }
    },
    "app": {
      "type": "object",
      "properties": {
        "server": {
          "type": "object",
          "properties": {
            "ports": {
              "type": "object",
              "properties": {
                "http": {
                  "type": "integer"
                },
                "srt": {
                  "type": "integer"
                }
              },
              "required": ["http", "srt"]
            }
          },
          "required": ["ports"]
        },
        "stream": {
          "type": "object",
          "properties": {
            "timeout": {
              "type": "string"
            },
            "window": {
              "type": "string"
            }
          },
          "required": ["timeout", "window"]
        },
        "fusion": {
          "type": "object",
          "properties": {
            "srt": {
              "type": "object",
              "properties": {
                "host": {
                  "type": "string"
                },
                "port": {
                  "type": "integer"
                }
              },
              "required": ["host", "port"]
            }
          },
          "required": ["srt"]
        },
        "emirecords": {
          "type": "object",
          "properties": {
            "http": {
              "type": "object",
              "properties": {
                "scheme": {
                  "type": "string"
                },
                "host": {
                  "type": "string"
                },
                "port": {
                  "type": "integer"
                },
                "path": {
                  "type": "string"
                }
              },
              "required": ["scheme", "host", "port", "path"]
            },
            "srt": {
              "type": "object",
              "properties": {
                "host": {
                  "type": "string"
                },
                "port": {
                  "type": "integer"
                }
              },
              "required": ["host", "port"]
            }
          },
          "required": ["http", "srt"]
        },
        "emishows": {
          "type": "object",
          "properties": {
            "http": {
              "type": "object",
              "properties": {
                "scheme": {
                  "type": "string"
                },
                "host": {
                  "type": "string"
                },
                "port": {
                  "type": "integer"
                },
                "path": {
                  "type": "string"
                }
              },
              "required": ["scheme", "host", "port", "path"]
            }
          },
          "required": ["http"]
        }
      },
      "required": ["server", "stream", "fusion", "emirecords", "emishows"]
    },
    "configMap": {
      "type": "object",
      "properties": {
        "metadata": {
          "type": "object"
        }
      }
    },
    "pod": {
      "type": "object",
      "properties": {
        "metadata": {
          "type": "object"
        },
        "spec": {
          "type": "object"
        }
      }
    },
    "deployment": {
      "type": "object",
      "properties": {
        "metadata": {
          "type": "object"
        },
        "spec": {
          "type": "object"
        }
      }
    },
    "service": {
      "type": "object",
      "properties": {
        "ports": {
          "type": "object",
          "properties": {
            "http": {
              "type": "integer"
            },
            "srt": {
              "type": "integer"
            }
          },
          "required": ["http", "srt"]
        },
        "metadata": {
          "type": "object"
        },
        "spec": {
          "type": "object"
        }
      },
      "required": ["ports"]
    }
  },
  "required": ["app", "service"]
}
