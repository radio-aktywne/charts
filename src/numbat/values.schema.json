{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "properties": {
    "common": {
      "properties": {
        "metadata": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "configMap": {
      "properties": {
        "metadata": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "container": {
      "properties": {
        "spec": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "deployment": {
      "properties": {
        "metadata": {
          "type": "object"
        },
        "spec": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "name": {
      "type": "string"
    },
    "numbat": {
      "properties": {
        "amber": {
          "properties": {
            "s3": {
              "properties": {
                "host": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                },
                "port": {
                  "type": "integer"
                },
                "secure": {
                  "type": "boolean"
                },
                "user": {
                  "type": "string"
                }
              },
              "required": ["secure", "host", "user", "password"],
              "type": "object"
            }
          },
          "required": ["s3"],
          "type": "object"
        },
        "beaver": {
          "properties": {
            "http": {
              "properties": {
                "host": {
                  "type": "string"
                },
                "path": {
                  "type": "string"
                },
                "port": {
                  "type": "integer"
                },
                "scheme": {
                  "type": "string"
                }
              },
              "required": ["scheme", "host"],
              "type": "object"
            }
          },
          "required": ["http"],
          "type": "object"
        },
        "debug": {
          "type": "boolean"
        },
        "server": {
          "properties": {
            "port": {
              "type": "integer"
            }
          },
          "required": ["port"],
          "type": "object"
        }
      },
      "required": ["server", "amber", "beaver", "debug"],
      "type": "object"
    },
    "pod": {
      "properties": {
        "metadata": {
          "type": "object"
        },
        "spec": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "secret": {
      "properties": {
        "metadata": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "service": {
      "properties": {
        "metadata": {
          "type": "object"
        },
        "port": {
          "type": "integer"
        },
        "spec": {
          "type": "object"
        }
      },
      "required": ["port"],
      "type": "object"
    }
  },
  "required": ["numbat", "service"],
  "type": "object"
}
