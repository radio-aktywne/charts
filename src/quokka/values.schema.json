{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "properties": {
    "common": {
      "properties": {
        "metadata": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "configMap": {
      "properties": {
        "metadata": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "container": {
      "properties": {
        "spec": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "deployment": {
      "properties": {
        "metadata": {
          "type": "object"
        },
        "spec": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "name": {
      "type": "string"
    },
    "pod": {
      "properties": {
        "metadata": {
          "type": "object"
        },
        "spec": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "quokka": {
      "properties": {
        "credentials": {
          "properties": {
            "admin": {
              "properties": {
                "password": {
                  "type": "string"
                },
                "user": {
                  "type": "string"
                }
              },
              "required": ["user", "password"],
              "type": "object"
            },
            "source": {
              "properties": {
                "password": {
                  "type": "string"
                },
                "user": {
                  "type": "string"
                }
              },
              "required": ["user", "password"],
              "type": "object"
            }
          },
          "required": ["source", "admin"],
          "type": "object"
        },
        "server": {
          "properties": {
            "port": {
              "type": "integer"
            }
          },
          "required": ["port"],
          "type": "object"
        }
      },
      "required": ["server", "credentials"],
      "type": "object"
    },
    "secret": {
      "properties": {
        "metadata": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "service": {
      "properties": {
        "metadata": {
          "type": "object"
        },
        "port": {
          "type": "integer"
        },
        "spec": {
          "type": "object"
        }
      },
      "required": ["port"],
      "type": "object"
    }
  },
  "required": ["quokka", "service"],
  "type": "object"
}
