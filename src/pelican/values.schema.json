{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "common": {
      "type": "object",
      "properties": {
        "metadata": {
          "type": "object"
        }
      }
    },
    "pelican": {
      "type": "object",
      "properties": {
        "server": {
          "type": "object",
          "properties": {
            "port": {
              "type": "integer"
            },
            "trusted": {
              "type": "string"
            }
          },
          "required": ["port", "trusted"]
        },
        "graphite": {
          "type": "object",
          "properties": {
            "sql": {
              "type": "object",
              "properties": {
                "host": {
                  "type": "string"
                },
                "port": {
                  "type": "integer"
                },
                "password": {
                  "type": "string"
                }
              },
              "required": ["host", "port", "password"]
            }
          },
          "required": ["sql"]
        },
        "minium": {
          "type": "object",
          "properties": {
            "s3": {
              "type": "object",
              "properties": {
                "secure": {
                  "type": "boolean"
                },
                "host": {
                  "type": "string"
                },
                "port": {
                  "type": "integer"
                },
                "user": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              },
              "required": ["secure", "host", "user", "password"]
            }
          },
          "required": ["s3"]
        }
      },
      "required": ["server", "graphite", "minium"]
    },
    "secret": {
      "type": "object",
      "properties": {
        "metadata": {
          "type": "object"
        }
      }
    },
    "configMap": {
      "type": "object",
      "properties": {
        "metadata": {
          "type": "object"
        }
      }
    },
    "pod": {
      "type": "object",
      "properties": {
        "metadata": {
          "type": "object"
        },
        "spec": {
          "type": "object"
        }
      }
    },
    "deployment": {
      "type": "object",
      "properties": {
        "metadata": {
          "type": "object"
        },
        "spec": {
          "type": "object"
        }
      }
    },
    "service": {
      "type": "object",
      "properties": {
        "port": {
          "type": "integer"
        },
        "metadata": {
          "type": "object"
        },
        "spec": {
          "type": "object"
        }
      },
      "required": ["port"]
    }
  },
  "required": ["pelican", "service"]
}
