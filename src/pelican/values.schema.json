{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "properties": {
    "common": {
      "properties": {
        "metadata": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "configMap": {
      "properties": {
        "metadata": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "container": {
      "properties": {
        "spec": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "deployment": {
      "properties": {
        "metadata": {
          "type": "object"
        },
        "spec": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "name": {
      "type": "string"
    },
    "pelican": {
      "properties": {
        "debug": {
          "type": "boolean"
        },
        "graphite": {
          "properties": {
            "sql": {
              "properties": {
                "host": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                },
                "port": {
                  "type": "integer"
                }
              },
              "required": ["host", "port", "password"],
              "type": "object"
            }
          },
          "required": ["sql"],
          "type": "object"
        },
        "minium": {
          "properties": {
            "s3": {
              "properties": {
                "host": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                },
                "port": {
                  "type": "integer"
                },
                "secure": {
                  "type": "boolean"
                },
                "user": {
                  "type": "string"
                }
              },
              "required": ["secure", "host", "user", "password"],
              "type": "object"
            }
          },
          "required": ["s3"],
          "type": "object"
        },
        "server": {
          "properties": {
            "port": {
              "type": "integer"
            },
            "trusted": {
              "type": "string"
            }
          },
          "required": ["port", "trusted"],
          "type": "object"
        }
      },
      "required": ["server", "graphite", "minium", "debug"],
      "type": "object"
    },
    "pod": {
      "properties": {
        "metadata": {
          "type": "object"
        },
        "spec": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "secret": {
      "properties": {
        "metadata": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "service": {
      "properties": {
        "metadata": {
          "type": "object"
        },
        "port": {
          "type": "integer"
        },
        "spec": {
          "type": "object"
        }
      },
      "required": ["port"],
      "type": "object"
    }
  },
  "required": ["pelican", "service"],
  "type": "object"
}
