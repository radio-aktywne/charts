{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "common": {
      "type": "object",
      "properties": {
        "metadata": {
          "type": "object"
        }
      }
    },
    "scorpion": {
      "type": "object",
      "properties": {
        "server": {
          "type": "object",
          "properties": {
            "ports": {
              "type": "object",
              "properties": {
                "public": {
                  "type": "integer"
                },
                "admin": {
                  "type": "integer"
                }
              },
              "required": ["public", "admin"]
            }
          },
          "required": ["ports"]
        },
        "urls": {
          "type": "object",
          "properties": {
            "issuer": {
              "type": "string"
            },
            "public": {
              "type": "string"
            },
            "admin": {
              "type": "string"
            }
          },
          "required": ["issuer", "public", "admin"]
        },
        "secrets": {
          "type": "object",
          "properties": {
            "system": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "cookie": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": ["system", "cookie"]
        },
        "crocus": {
          "type": "object",
          "properties": {
            "public": {
              "type": "object",
              "properties": {
                "scheme": {
                  "type": "string"
                },
                "host": {
                  "type": "string"
                },
                "port": {
                  "type": "integer"
                },
                "path": {
                  "type": "string"
                }
              },
              "required": ["scheme", "host"]
            }
          },
          "required": ["public"]
        },
        "diamond": {
          "type": "object",
          "properties": {
            "sql": {
              "type": "object",
              "properties": {
                "host": {
                  "type": "string"
                },
                "port": {
                  "type": "integer"
                },
                "password": {
                  "type": "string"
                }
              },
              "required": ["host", "port", "password"]
            }
          },
          "required": ["sql"]
        },
        "clients": {
          "type": "object",
          "properties": {
            "aster": {
              "type": "object",
              "properties": {
                "secret": {
                  "type": "string"
                },
                "url": {
                  "type": "string"
                }
              },
              "required": ["secret", "url"]
            },
            "daisy": {
              "type": "object",
              "properties": {
                "secret": {
                  "type": "string"
                },
                "url": {
                  "type": "string"
                }
              },
              "required": ["secret", "url"]
            },
            "jasmine": {
              "type": "object",
              "properties": {
                "secret": {
                  "type": "string"
                },
                "url": {
                  "type": "string"
                }
              },
              "required": ["secret", "url"]
            },
            "lotus": {
              "type": "object",
              "properties": {
                "secret": {
                  "type": "string"
                },
                "url": {
                  "type": "string"
                }
              },
              "required": ["secret", "url"]
            },
            "magnolia": {
              "type": "object",
              "properties": {
                "secret": {
                  "type": "string"
                },
                "url": {
                  "type": "string"
                }
              },
              "required": ["secret", "url"]
            },
            "poppy": {
              "type": "object",
              "properties": {
                "secret": {
                  "type": "string"
                },
                "url": {
                  "type": "string"
                }
              },
              "required": ["secret", "url"]
            },
            "tulip": {
              "type": "object",
              "properties": {
                "secret": {
                  "type": "string"
                },
                "url": {
                  "type": "string"
                }
              },
              "required": ["secret", "url"]
            }
          },
          "required": [
            "aster",
            "daisy",
            "jasmine",
            "lotus",
            "magnolia",
            "poppy",
            "tulip"
          ]
        },
        "debug": {
          "type": "boolean"
        }
      },
      "required": [
        "server",
        "urls",
        "secrets",
        "crocus",
        "diamond",
        "clients",
        "debug"
      ]
    },
    "secret": {
      "type": "object",
      "properties": {
        "metadata": {
          "type": "object"
        }
      }
    },
    "configMap": {
      "type": "object",
      "properties": {
        "metadata": {
          "type": "object"
        }
      }
    },
    "pod": {
      "type": "object",
      "properties": {
        "metadata": {
          "type": "object"
        },
        "spec": {
          "type": "object"
        }
      }
    },
    "deployment": {
      "type": "object",
      "properties": {
        "metadata": {
          "type": "object"
        },
        "spec": {
          "type": "object"
        }
      }
    },
    "service": {
      "type": "object",
      "properties": {
        "ports": {
          "type": "object",
          "properties": {
            "public": {
              "type": "integer"
            },
            "admin": {
              "type": "integer"
            }
          },
          "required": ["public", "admin"]
        },
        "metadata": {
          "type": "object"
        },
        "spec": {
          "type": "object"
        }
      },
      "required": ["ports"]
    }
  },
  "required": ["scorpion", "service"]
}
