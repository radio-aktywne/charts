{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "properties": {
    "common": {
      "properties": {
        "metadata": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "configMap": {
      "properties": {
        "metadata": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "container": {
      "properties": {
        "spec": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "name": {
      "type": "string"
    },
    "pod": {
      "properties": {
        "metadata": {
          "type": "object"
        },
        "spec": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "sapphire": {
      "properties": {
        "credentials": {
          "properties": {
            "user": {
              "properties": {
                "password": {
                  "type": "string"
                }
              },
              "required": ["password"],
              "type": "object"
            }
          },
          "required": ["user"],
          "type": "object"
        },
        "server": {
          "properties": {
            "port": {
              "type": "integer"
            }
          },
          "required": ["port"],
          "type": "object"
        }
      },
      "required": ["server", "credentials"],
      "type": "object"
    },
    "secret": {
      "properties": {
        "metadata": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "service": {
      "properties": {
        "metadata": {
          "type": "object"
        },
        "port": {
          "type": "integer"
        },
        "spec": {
          "type": "object"
        }
      },
      "required": ["port"],
      "type": "object"
    },
    "statefulSet": {
      "properties": {
        "metadata": {
          "type": "object"
        },
        "spec": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "volume": {
      "properties": {
        "access": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "items": {
                "type": "string"
              },
              "type": "array"
            }
          ]
        },
        "class": {
          "type": "string"
        },
        "metadata": {
          "type": "object"
        },
        "size": {
          "type": "string"
        },
        "spec": {
          "type": "object"
        }
      },
      "required": ["access", "size"],
      "type": "object"
    }
  },
  "required": ["sapphire", "service"],
  "type": "object"
}
