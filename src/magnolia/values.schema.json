{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "properties": {
    "common": {
      "properties": {
        "metadata": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "configMap": {
      "properties": {
        "metadata": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "container": {
      "properties": {
        "spec": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "deployment": {
      "properties": {
        "metadata": {
          "type": "object"
        },
        "spec": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "magnolia": {
      "properties": {
        "beaver": {
          "properties": {
            "http": {
              "properties": {
                "host": {
                  "type": "string"
                },
                "path": {
                  "type": "string"
                },
                "port": {
                  "type": "integer"
                },
                "scheme": {
                  "type": "string"
                }
              },
              "required": ["scheme", "host"],
              "type": "object"
            }
          },
          "required": ["http"],
          "type": "object"
        },
        "debug": {
          "type": "boolean"
        },
        "gecko": {
          "properties": {
            "http": {
              "properties": {
                "host": {
                  "type": "string"
                },
                "path": {
                  "type": "string"
                },
                "port": {
                  "type": "integer"
                },
                "scheme": {
                  "type": "string"
                }
              },
              "required": ["scheme", "host"],
              "type": "object"
            }
          },
          "required": ["http"],
          "type": "object"
        },
        "scorpion": {
          "properties": {
            "public": {
              "properties": {
                "client": {
                  "type": "string"
                },
                "host": {
                  "type": "string"
                },
                "path": {
                  "type": "string"
                },
                "port": {
                  "type": "integer"
                },
                "scheme": {
                  "type": "string"
                },
                "secret": {
                  "type": "string"
                }
              },
              "required": ["scheme", "host", "client", "secret"],
              "type": "object"
            }
          },
          "required": ["public"],
          "type": "object"
        },
        "secrets": {
          "properties": {
            "auth": {
              "items": {
                "type": "string"
              },
              "type": "array"
            }
          },
          "required": ["auth"],
          "type": "object"
        },
        "server": {
          "properties": {
            "port": {
              "type": "integer"
            }
          },
          "required": ["port"],
          "type": "object"
        },
        "urls": {
          "properties": {
            "public": {
              "type": "string"
            }
          },
          "required": ["public"],
          "type": "object"
        }
      },
      "required": [
        "server",
        "secrets",
        "urls",
        "beaver",
        "gecko",
        "scorpion",
        "debug"
      ],
      "type": "object"
    },
    "name": {
      "type": "string"
    },
    "pod": {
      "properties": {
        "metadata": {
          "type": "object"
        },
        "spec": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "secret": {
      "properties": {
        "metadata": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "service": {
      "properties": {
        "metadata": {
          "type": "object"
        },
        "port": {
          "type": "integer"
        },
        "spec": {
          "type": "object"
        }
      },
      "required": ["port"],
      "type": "object"
    }
  },
  "required": ["magnolia", "service"],
  "type": "object"
}
