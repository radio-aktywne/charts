{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "properties": {
    "common": {
      "properties": {
        "metadata": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "configMap": {
      "properties": {
        "metadata": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "container": {
      "properties": {
        "spec": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "deployment": {
      "properties": {
        "metadata": {
          "type": "object"
        },
        "spec": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "falcon": {
      "properties": {
        "cookies": {
          "properties": {
            "domain": {
              "type": "string"
            }
          },
          "required": [],
          "type": "object"
        },
        "debug": {
          "type": "boolean"
        },
        "obsidian": {
          "properties": {
            "sql": {
              "properties": {
                "host": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                },
                "port": {
                  "type": "integer"
                }
              },
              "required": ["host", "port", "password"],
              "type": "object"
            }
          },
          "required": ["sql"],
          "type": "object"
        },
        "oidc": {
          "properties": {
            "google": {
              "properties": {
                "client": {
                  "type": "string"
                },
                "domain": {
                  "type": "string"
                },
                "secret": {
                  "type": "string"
                }
              },
              "required": ["client", "secret"],
              "type": "object"
            }
          },
          "required": ["google"],
          "type": "object"
        },
        "orchid": {
          "properties": {
            "public": {
              "properties": {
                "host": {
                  "type": "string"
                },
                "path": {
                  "type": "string"
                },
                "port": {
                  "type": "integer"
                },
                "scheme": {
                  "type": "string"
                }
              },
              "required": ["scheme", "host"],
              "type": "object"
            }
          },
          "required": ["public"],
          "type": "object"
        },
        "secrets": {
          "properties": {
            "cipher": {
              "items": {
                "type": "string"
              },
              "type": "array"
            },
            "cookie": {
              "items": {
                "type": "string"
              },
              "type": "array"
            },
            "default": {
              "items": {
                "type": "string"
              },
              "type": "array"
            }
          },
          "required": ["default", "cookie", "cipher"],
          "type": "object"
        },
        "server": {
          "properties": {
            "ports": {
              "properties": {
                "admin": {
                  "type": "integer"
                },
                "public": {
                  "type": "integer"
                }
              },
              "required": ["public", "admin"],
              "type": "object"
            }
          },
          "required": ["ports"],
          "type": "object"
        },
        "urls": {
          "properties": {
            "admin": {
              "type": "string"
            },
            "public": {
              "type": "string"
            }
          },
          "required": ["public", "admin"],
          "type": "object"
        }
      },
      "required": [
        "server",
        "urls",
        "secrets",
        "orchid",
        "obsidian",
        "oidc",
        "debug"
      ],
      "type": "object"
    },
    "name": {
      "type": "string"
    },
    "pod": {
      "properties": {
        "metadata": {
          "type": "object"
        },
        "spec": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "secret": {
      "properties": {
        "metadata": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "service": {
      "properties": {
        "metadata": {
          "type": "object"
        },
        "ports": {
          "properties": {
            "admin": {
              "type": "integer"
            },
            "public": {
              "type": "integer"
            }
          },
          "required": ["public", "admin"],
          "type": "object"
        },
        "spec": {
          "type": "object"
        }
      },
      "required": ["ports"],
      "type": "object"
    }
  },
  "required": ["falcon", "service"],
  "type": "object"
}
