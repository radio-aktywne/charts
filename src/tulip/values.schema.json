{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "common": {
      "type": "object",
      "properties": {
        "metadata": {
          "type": "object"
        }
      }
    },
    "tulip": {
      "type": "object",
      "properties": {
        "server": {
          "type": "object",
          "properties": {
            "port": {
              "type": "integer"
            }
          },
          "required": ["port"]
        },
        "cookies": {
          "type": "object",
          "properties": {
            "domain": {
              "type": "string"
            }
          },
          "required": []
        },
        "secrets": {
          "type": "object",
          "properties": {
            "auth": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": ["auth"]
        },
        "urls": {
          "type": "object",
          "properties": {
            "public": {
              "type": "string"
            }
          },
          "required": ["public"]
        },
        "beaver": {
          "type": "object",
          "properties": {
            "http": {
              "type": "object",
              "properties": {
                "scheme": {
                  "type": "string"
                },
                "host": {
                  "type": "string"
                },
                "port": {
                  "type": "integer"
                },
                "path": {
                  "type": "string"
                }
              },
              "required": ["scheme", "host"]
            }
          },
          "required": ["http"]
        },
        "scorpion": {
          "type": "object",
          "properties": {
            "public": {
              "type": "object",
              "properties": {
                "scheme": {
                  "type": "string"
                },
                "host": {
                  "type": "string"
                },
                "port": {
                  "type": "integer"
                },
                "path": {
                  "type": "string"
                },
                "client": {
                  "type": "string"
                },
                "secret": {
                  "type": "string"
                }
              },
              "required": ["scheme", "host", "client", "secret"]
            }
          },
          "required": ["public"]
        },
        "debug": {
          "type": "boolean"
        }
      },
      "required": ["server", "secrets", "urls", "beaver", "scorpion", "debug"]
    },
    "secret": {
      "type": "object",
      "properties": {
        "metadata": {
          "type": "object"
        }
      }
    },
    "configMap": {
      "type": "object",
      "properties": {
        "metadata": {
          "type": "object"
        }
      }
    },
    "pod": {
      "type": "object",
      "properties": {
        "metadata": {
          "type": "object"
        },
        "spec": {
          "type": "object"
        }
      }
    },
    "deployment": {
      "type": "object",
      "properties": {
        "metadata": {
          "type": "object"
        },
        "spec": {
          "type": "object"
        }
      }
    },
    "service": {
      "type": "object",
      "properties": {
        "port": {
          "type": "integer"
        },
        "metadata": {
          "type": "object"
        },
        "spec": {
          "type": "object"
        }
      },
      "required": ["port"]
    }
  },
  "required": ["tulip", "service"]
}
