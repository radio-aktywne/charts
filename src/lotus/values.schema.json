{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "common": {
      "type": "object",
      "properties": {
        "metadata": {
          "type": "object"
        }
      }
    },
    "lotus": {
      "type": "object",
      "properties": {
        "server": {
          "type": "object",
          "properties": {
            "port": {
              "type": "integer"
            }
          },
          "required": ["port"]
        },
        "pelican": {
          "type": "object",
          "properties": {
            "http": {
              "type": "object",
              "properties": {
                "scheme": {
                  "type": "string"
                },
                "host": {
                  "type": "string"
                },
                "port": {
                  "type": "integer"
                },
                "path": {
                  "type": "string"
                }
              },
              "required": ["scheme", "host"]
            }
          },
          "required": ["http"]
        }
      },
      "required": ["server", "pelican"]
    },
    "configMap": {
      "type": "object",
      "properties": {
        "metadata": {
          "type": "object"
        }
      }
    },
    "pod": {
      "type": "object",
      "properties": {
        "metadata": {
          "type": "object"
        },
        "spec": {
          "type": "object"
        }
      }
    },
    "deployment": {
      "type": "object",
      "properties": {
        "metadata": {
          "type": "object"
        },
        "spec": {
          "type": "object"
        }
      }
    },
    "service": {
      "type": "object",
      "properties": {
        "port": {
          "type": "integer"
        },
        "metadata": {
          "type": "object"
        },
        "spec": {
          "type": "object"
        }
      },
      "required": ["port"]
    }
  },
  "required": ["lotus", "service"]
}
