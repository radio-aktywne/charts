{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "common": {
      "type": "object",
      "properties": {
        "metadata": {
          "type": "object"
        }
      }
    },
    "database": {
      "type": "object",
      "properties": {
        "server": {
          "type": "object",
          "properties": {
            "ports": {
              "type": "object",
              "properties": {
                "s3": {
                  "type": "integer"
                },
                "web": {
                  "type": "integer"
                }
              },
              "required": ["s3", "web"]
            }
          },
          "required": ["ports"]
        },
        "urls": {
          "type": "object",
          "properties": {
            "web": {
              "type": "string"
            }
          },
          "required": ["web"]
        },
        "credentials": {
          "type": "object",
          "properties": {
            "admin": {
              "type": "object",
              "properties": {
                "user": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              },
              "required": ["user", "password"]
            },
            "readonly": {
              "type": "object",
              "properties": {
                "user": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              },
              "required": ["user", "password"]
            },
            "readwrite": {
              "type": "object",
              "properties": {
                "user": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              },
              "required": ["user", "password"]
            }
          },
          "required": ["admin", "readonly", "readwrite"]
        },
        "buckets": {
          "type": "object",
          "properties": {
            "media": {
              "type": "string"
            },
            "metadata": {
              "type": "string"
            }
          },
          "required": ["media", "metadata"]
        }
      },
      "required": ["server", "urls", "credentials", "buckets"]
    },
    "secret": {
      "type": "object",
      "properties": {
        "metadata": {
          "type": "object"
        }
      }
    },
    "configMap": {
      "type": "object",
      "properties": {
        "metadata": {
          "type": "object"
        }
      }
    },
    "volume": {
      "type": "object",
      "properties": {
        "access": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          ]
        },
        "class": {
          "type": "string"
        },
        "size": {
          "type": "string"
        },
        "metadata": {
          "type": "object"
        },
        "spec": {
          "type": "object"
        }
      },
      "required": ["access", "size"]
    },
    "pod": {
      "type": "object",
      "properties": {
        "metadata": {
          "type": "object"
        },
        "spec": {
          "type": "object"
        }
      }
    },
    "statefulSet": {
      "type": "object",
      "properties": {
        "metadata": {
          "type": "object"
        },
        "spec": {
          "type": "object"
        }
      }
    },
    "service": {
      "type": "object",
      "properties": {
        "ports": {
          "type": "object",
          "properties": {
            "s3": {
              "type": "integer"
            },
            "web": {
              "type": "integer"
            }
          },
          "required": ["s3", "web"]
        },
        "metadata": {
          "type": "object"
        },
        "spec": {
          "type": "object"
        }
      },
      "required": ["ports"]
    }
  },
  "required": ["database", "service"]
}
