{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "properties": {
    "common": {
      "properties": {
        "metadata": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "configMap": {
      "properties": {
        "metadata": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "container": {
      "properties": {
        "spec": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "dingo": {
      "properties": {
        "pelican": {
          "properties": {
            "http": {
              "properties": {
                "host": {
                  "type": "string"
                },
                "path": {
                  "type": "string"
                },
                "port": {
                  "type": "integer"
                },
                "scheme": {
                  "type": "string"
                }
              },
              "required": ["scheme", "host"],
              "type": "object"
            }
          },
          "required": ["http"],
          "type": "object"
        },
        "quokka": {
          "properties": {
            "icy": {
              "properties": {
                "host": {
                  "type": "string"
                },
                "mount": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                },
                "port": {
                  "type": "integer"
                },
                "user": {
                  "type": "string"
                }
              },
              "required": ["host", "user", "password", "mount"],
              "type": "object"
            }
          },
          "required": ["icy"],
          "type": "object"
        },
        "server": {
          "properties": {
            "http": {
              "properties": {
                "port": {
                  "type": "integer"
                }
              },
              "required": ["port"],
              "type": "object"
            },
            "srt": {
              "properties": {
                "port": {
                  "type": "integer"
                }
              },
              "required": ["port"],
              "type": "object"
            }
          },
          "required": ["srt", "http"],
          "type": "object"
        }
      },
      "required": ["server", "pelican", "quokka"],
      "type": "object"
    },
    "name": {
      "type": "string"
    },
    "pod": {
      "properties": {
        "metadata": {
          "type": "object"
        },
        "spec": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "secret": {
      "properties": {
        "metadata": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "service": {
      "properties": {
        "metadata": {
          "type": "object"
        },
        "ports": {
          "properties": {
            "http": {
              "type": "integer"
            },
            "srt": {
              "type": "integer"
            }
          },
          "required": ["srt", "http"],
          "type": "object"
        },
        "spec": {
          "type": "object"
        }
      },
      "required": ["ports"],
      "type": "object"
    },
    "statefulSet": {
      "properties": {
        "metadata": {
          "type": "object"
        },
        "spec": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "volume": {
      "properties": {
        "access": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "items": {
                "type": "string"
              },
              "type": "array"
            }
          ]
        },
        "class": {
          "type": "string"
        },
        "metadata": {
          "type": "object"
        },
        "size": {
          "type": "string"
        },
        "spec": {
          "type": "object"
        }
      },
      "required": ["access", "size"],
      "type": "object"
    }
  },
  "required": ["dingo", "service"],
  "type": "object"
}
