{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "properties": {
    "common": {
      "properties": {
        "metadata": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "configMap": {
      "properties": {
        "metadata": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "container": {
      "properties": {
        "spec": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "deployment": {
      "properties": {
        "metadata": {
          "type": "object"
        },
        "spec": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "loris": {
      "properties": {
        "debug": {
          "type": "boolean"
        },
        "server": {
          "properties": {
            "ports": {
              "properties": {
                "http": {
                  "type": "integer"
                },
                "rtp": {
                  "type": "integer"
                },
                "whip": {
                  "type": "integer"
                }
              },
              "required": ["http", "whip", "rtp"],
              "type": "object"
            }
          },
          "required": ["ports"],
          "type": "object"
        },
        "streamer": {
          "properties": {
            "stun": {
              "properties": {
                "host": {
                  "type": "string"
                },
                "port": {
                  "type": "integer"
                }
              },
              "required": ["host", "port"],
              "type": "object"
            },
            "timeout": {
              "type": "string"
            }
          },
          "required": ["stun", "timeout"],
          "type": "object"
        }
      },
      "required": ["server", "streamer", "debug"],
      "type": "object"
    },
    "name": {
      "type": "string"
    },
    "pod": {
      "properties": {
        "metadata": {
          "type": "object"
        },
        "spec": {
          "type": "object"
        }
      },
      "type": "object"
    },
    "service": {
      "properties": {
        "metadata": {
          "type": "object"
        },
        "ports": {
          "properties": {
            "http": {
              "type": "integer"
            },
            "rtp": {
              "type": "integer"
            },
            "whip": {
              "type": "integer"
            }
          },
          "required": ["http", "whip", "rtp"],
          "type": "object"
        },
        "spec": {
          "type": "object"
        }
      },
      "required": ["ports"],
      "type": "object"
    }
  },
  "required": ["loris", "service"],
  "type": "object"
}
