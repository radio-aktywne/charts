{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "common": {
      "type": "object",
      "properties": {
        "metadata": {
          "type": "object"
        }
      }
    },
    "app": {
      "type": "object",
      "properties": {
        "port": {
          "type": "integer"
        },
        "source": {
          "type": "object",
          "properties": {
            "user": {
              "type": "string"
            },
            "password": {
              "type": "string"
            }
          },
          "required": ["user", "password"]
        },
        "admin": {
          "type": "object",
          "properties": {
            "user": {
              "type": "string"
            },
            "password": {
              "type": "string"
            }
          },
          "required": ["user", "password"]
        }
      },
      "required": ["port", "source", "admin"]
    },
    "secret": {
      "type": "object",
      "properties": {
        "metadata": {
          "type": "object"
        }
      }
    },
    "configMap": {
      "type": "object",
      "properties": {
        "metadata": {
          "type": "object"
        }
      }
    },
    "pod": {
      "type": "object",
      "properties": {
        "metadata": {
          "type": "object"
        },
        "spec": {
          "type": "object"
        }
      }
    },
    "deployment": {
      "type": "object",
      "properties": {
        "replicas": {
          "type": "integer"
        },
        "metadata": {
          "type": "object"
        },
        "spec": {
          "type": "object"
        }
      }
    },
    "service": {
      "type": "object",
      "properties": {
        "port": {
          "type": "integer"
        },
        "metadata": {
          "type": "object"
        },
        "spec": {
          "type": "object"
        }
      },
      "required": ["port"]
    }
  },
  "required": ["app", "service"]
}
