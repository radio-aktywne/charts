{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "common": {
      "type": "object",
      "properties": {
        "metadata": {
          "type": "object"
        }
      }
    },
    "app": {
      "type": "object",
      "properties": {
        "server": {
          "type": "object",
          "properties": {
            "port": {
              "type": "integer"
            }
          },
          "required": ["port"]
        },
        "stream": {
          "type": "object",
          "properties": {
            "timeout": {
              "type": "string"
            }
          },
          "required": ["timeout"]
        },
        "cleaner": {
          "type": "object",
          "properties": {
            "reference": {
              "type": "string"
            },
            "interval": {
              "type": "string"
            }
          },
          "required": ["reference", "interval"]
        },
        "synchronizer": {
          "type": "object",
          "properties": {
            "reference": {
              "type": "string"
            },
            "interval": {
              "type": "string"
            },
            "window": {
              "type": "string"
            }
          },
          "required": ["reference", "interval", "window"]
        },
        "emishows": {
          "type": "object",
          "properties": {
            "http": {
              "type": "object",
              "properties": {
                "scheme": {
                  "type": "string"
                },
                "host": {
                  "type": "string"
                },
                "port": {
                  "type": "integer"
                },
                "path": {
                  "type": "string"
                }
              },
              "required": ["scheme", "host", "port", "path"]
            }
          },
          "required": ["http"]
        },
        "emiarchive": {
          "type": "object",
          "properties": {
            "s3": {
              "type": "object",
              "properties": {
                "secure": {
                  "type": "boolean"
                },
                "host": {
                  "type": "string"
                },
                "port": {
                  "type": "integer"
                },
                "user": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                },
                "buckets": {
                  "type": "object",
                  "properties": {
                    "live": {
                      "type": "string"
                    },
                    "prerecorded": {
                      "type": "string"
                    }
                  },
                  "required": ["live", "prerecorded"]
                }
              },
              "required": [
                "secure",
                "host",
                "port",
                "user",
                "password",
                "buckets"
              ]
            }
          },
          "required": ["s3"]
        },
        "emistream": {
          "type": "object",
          "properties": {
            "http": {
              "type": "object",
              "properties": {
                "scheme": {
                  "type": "string"
                },
                "host": {
                  "type": "string"
                },
                "port": {
                  "type": "integer"
                },
                "path": {
                  "type": "string"
                }
              },
              "required": ["scheme", "host", "port", "path"]
            },
            "srt": {
              "type": "object",
              "properties": {
                "host": {
                  "type": "string"
                },
                "port": {
                  "type": "integer"
                }
              },
              "required": ["host", "port"]
            }
          },
          "required": ["http", "srt"]
        }
      },
      "required": [
        "server",
        "stream",
        "cleaner",
        "synchronizer",
        "emishows",
        "emiarchive",
        "emistream"
      ]
    },
    "secret": {
      "type": "object",
      "properties": {
        "metadata": {
          "type": "object"
        }
      }
    },
    "configMap": {
      "type": "object",
      "properties": {
        "metadata": {
          "type": "object"
        }
      }
    },
    "volume": {
      "type": "object",
      "properties": {
        "access": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          ]
        },
        "class": {
          "type": "string"
        },
        "size": {
          "type": "string"
        },
        "metadata": {
          "type": "object"
        },
        "spec": {
          "type": "object"
        }
      },
      "required": ["access", "size"]
    },
    "pod": {
      "type": "object",
      "properties": {
        "metadata": {
          "type": "object"
        },
        "spec": {
          "type": "object"
        }
      }
    },
    "statefulSet": {
      "type": "object",
      "properties": {
        "metadata": {
          "type": "object"
        },
        "spec": {
          "type": "object"
        }
      }
    },
    "service": {
      "type": "object",
      "properties": {
        "port": {
          "type": "integer"
        },
        "metadata": {
          "type": "object"
        },
        "spec": {
          "type": "object"
        }
      },
      "required": ["port"]
    }
  },
  "required": ["app", "service"]
}
