{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "common": {
      "type": "object",
      "properties": {
        "metadata": {
          "type": "object"
        }
      }
    },
    "database": {
      "type": "object",
      "properties": {
        "port": {
          "type": "integer"
        },
        "user": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "calendar": {
          "type": "string"
        }
      },
      "required": ["port", "user", "password", "calendar"]
    },
    "secret": {
      "type": "object",
      "properties": {
        "metadata": {
          "type": "object"
        }
      }
    },
    "configMap": {
      "type": "object",
      "properties": {
        "metadata": {
          "type": "object"
        }
      }
    },
    "volume": {
      "type": "object",
      "properties": {
        "modes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "class": {
          "type": "string"
        },
        "size": {
          "type": "string"
        },
        "metadata": {
          "type": "object"
        },
        "spec": {
          "type": "object"
        }
      }
    },
    "pod": {
      "type": "object",
      "properties": {
        "metadata": {
          "type": "object"
        },
        "spec": {
          "type": "object"
        }
      }
    },
    "statefulSet": {
      "type": "object",
      "properties": {
        "metadata": {
          "type": "object"
        },
        "spec": {
          "type": "object"
        }
      }
    },
    "service": {
      "type": "object",
      "properties": {
        "port": {
          "type": "integer"
        },
        "metadata": {
          "type": "object"
        },
        "spec": {
          "type": "object"
        }
      },
      "required": ["port"]
    }
  },
  "required": ["database", "service"]
}
